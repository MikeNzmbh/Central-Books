# ============================================
# DJANGO CORE SETTINGS
# ============================================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,central-books-web.onrender.com

# ============================================
# DATABASE
# ============================================
# Local development (SQLite - no config needed)
# Production (Render auto-sets DATABASE_URL)
DATABASE_URL=

# ============================================
# MONITORING AGENT CONFIGURATION
# ============================================
# === Companion LLM (DeepSeek) ===
COMPANION_LLM_ENABLED=true
COMPANION_LLM_API_BASE=https://api.deepseek.com/v1
COMPANION_LLM_API_KEY=your-secret-key-here
COMPANION_LLM_MODEL=deepseek-chat
COMPANION_LLM_TIMEOUT_SECONDS=12
COMPANION_LLM_MAX_TOKENS=512

# OpenAI API Key (required for monitoring agent)
# Set this to your OpenAI API key from https://platform.openai.com/api-keys
# NEVER commit this key to the repository - always use environment variables
OPENAI_API_KEY=

# OpenAI Model to use for monitoring reports
# Options: gpt-5.1-mini (recommended), gpt-4o-mini, gpt-4o, gpt-4-turbo
MONITORING_MODEL=gpt-5.1-mini

# Monitoring environment identifier
MONITORING_ENV=production

# ============================================
# WEBHOOK DELIVERY (OPTIONAL)
# ============================================
# Slack Incoming Webhook URL for monitoring reports
# Get from: Slack App → Incoming Webhooks → Add New Webhook
# Example: https://hooks.slack.com/services/T08PCBC5598/B09V4UYF0BH/xxxxx
SLACK_WEBHOOK_URL=

# Discord Webhook URL for monitoring reports
# Get from: Server Settings → Integrations → Webhooks → New Webhook
# Example: https://discord.com/api/webhooks/xxxxx/xxxxx
DISCORD_WEBHOOK_URL=

# ============================================
# RENDER.COM DEPLOYMENT (CI/CD)
# ============================================
# Render API Key (for automated deployments)
# Get from: https://dashboard.render.com/account/settings
RENDER_API_KEY=

# Render Service ID for backend (web service)
# Format: srv-xxxxxxxxxxxxx
RENDER_SERVICE_ID=

# Render Service ID for frontend (if separate static site)
# Format: srv-xxxxxxxxxxxxx
RENDER_FRONTEND_SERVICE_ID=

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Email configuration (optional)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
